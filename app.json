{
  "expo": {
    "name": "CiBL Wallet",
    "slug": "cibl-wallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.yourname.cibl",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NSCameraUsageDescription": "CiBL needs camera access to scan QR codes for secure transactions.",
        "NSFaceIDUsageDescription": "CiBL uses FaceID to secure your assets and authorize payments."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.yourname.cibl",
      "permissions": [
        "CAMERA",
        "USE_BIOMETRIC",
        "VIBRATE"
      ]
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CiBL to use your camera for scanning crypto addresses."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#06b6d4",
          "sounds": [
            "./assets/sounds/notification_pop.mp3",
            "./assets/sounds/tx_success.mp3"
          ]
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}
